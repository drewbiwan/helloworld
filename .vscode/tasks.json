{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "hw",
    "options": {
        "env": {
            "vivado_exe" : "C://Xilinx//Vivado//2021.2//bin//vivado",
            "active_configuration" : "devboard"
        }
    },
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "echo",
            "args": [
                "${input:configuration}"
            ]
        },
        {
            "label": "create_vivado",
            "type": "shell",
            "command": "${cwd}//scripts//run_tcl.bat C://Xilinx//Vivado//2021.2//bin//vivado ${cwd}//scripts//create_vivado.tcl ${input:configuration}",
            "problemMatcher": []
        },
        {
            "label": "compile_vivado",
            "type": "shell",
            "command": "${cwd}//scripts//run_tcl.bat C://Xilinx//Vivado//2021.2//bin//vivado ${cwd}//scripts//compile_vivado.tcl ${input:configuration}",
            "problemMatcher": {
                "owner": "dcoker",
                "fileLocation":"absolute",
                "source": "dcoker",
                "pattern": {
                    "regexp": "^(ERROR|CRITICAL WARNING|WARNING):\\s+\\[(\\S+\\s\\S+)\\]\\s(.+)\\[(.*)\\:(\\d+)\\]$",
                    "severity": 1,
                    "code": 2,
                    "message": 3,
                    "file": 4,
                    "line": 5
                },

            }
        },
        {
            "label": "clean vivado",
            "type": "shell",
            "command": "${cwd}//scripts//clean.bat ${input:configuration}",
            "problemMatcher": {
                "owner": "dcoker",
                "fileLocation":"absolute",
                "source": "dcoker",
                "severity": "warning",
                "pattern": {
                    "regexp": "^(\\w:.+)\\s-\\s(.*)$",
                    "message": 2,
                    "file": 1,
                },

            }
        },
        {
            "label": "new_configuration",
            "type": "shell",
            "command": "${cwd}//scripts//new_configuration.bat ${input:new_configuration}",
            "problemMatcher": []
        },
        {
            "label": "check_problem",
            "type": "shell",
            "command": "echo WARNING: [Vivado 12-584] No ports matched 'leds_p[3]'. [F:/gitworkspace/helloworld/firmware/synth_rev1board/constraints/devboard_pins.xdc:1]",
            "problemMatcher": {
                "owner": "dcoker",
                "fileLocation":"absolute",
                "source": "dcoker",
                "pattern": {
                    "regexp": "^(ERROR|CRITICAL WARNING|WARNING):\\s+\\[(\\S+\\s\\S+)\\]\\s(.+)\\[(.*)\\:(\\d+)\\]$",
                    "severity": 1,
                    "code": 2,
                    "message": 3,
                    "file": 4,
                    "line": 5
                },

            }
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "configuration",
            "description": "Which configuration to run?",
            "options": [
              "devboard",
              "rev1board"
            ],
            "default": "devboard"
          },
          {
            "type": "promptString",
            "id": "new_configuration",
            "description": "Name the new configuration",
            "default": "default_config"
          }
    ],
}