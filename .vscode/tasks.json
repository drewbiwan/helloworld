{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "hw",
    "options": {
        "env": {
            "vivado_exe" : "C://Xilinx//Vivado//2021.2//bin//vivado",
            "active_configuration" : "devboard"
        }
    },
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "echo",
            "args": [
                "${input:configuration}"
            ]
        },
        {
            "label": "create_vivado",
            "type": "shell",
            "command": "${cwd}//scripts//run_tcl.bat C://Xilinx//Vivado//2021.2//bin//vivado ${cwd}//scripts//create_vivado.tcl ${input:configuration}",
            "problemMatcher": []
        },
        {
            "label": "compile_vivado",
            "type": "shell",
            "command": "${cwd}//scripts//run_tcl.bat C://Xilinx//Vivado//2021.2//bin//vivado ${cwd}//scripts//compile_vivado.tcl ${input:configuration}",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "clean vivado",
            "type": "shell",
            "command": "${cwd}//scripts//clean.bat ${input:configuration}",
            "problemMatcher": []
        },
        {
            "label": "new_configuration",
            "type": "shell",
            "command": "${cwd}//scripts//new_configuration.bat ${input:new_configuration}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "configuration",
            "description": "Which configuration to run?",
            "options": [
              "devboard",
              "rev1board"
            ],
            "default": "devboard"
          },
          {
            "type": "promptString",
            "id": "new_configuration",
            "description": "Name the new configuration",
            "default": "default_config"
          }
    ]
}